<h2>Edit Employee</h2>
<form method="POST" action="/employee/{{employee._id}}/edit-employee">
  <input type="text" name="username" value={{employee.username}} />
  <br />
  <input type="password" name="password" placeholder="Password" />
  <br />
  <input type="text" name="fullName" value="{{employee.fullName}}" />
  <br />
  <input type="text" name="employeeID" value={{employee.employeeID}} />
  <br />
  <label>Hire Date</label>
  <br />
  <input type="date" name="hireDate" value={{employee.hireDate}} />
  <br />
  <select name="role">
    <option>Role</option>
    <option value="MGR">Manager</option>
    <option value="FOH">Front-of-house</option>
    <option value="BOH">Back-of-hosue</option>
  </select>
  <br />
  <select name="status">
    <option>Status</option>
    <option value="FT">Full-time</option>
    <option value="PT">Part-time</option>
  </select>
  <br />
  <select name="privilege">
    <option>Privilege</option>
    <option value="Admin">Admin</option>
    <option value="Editor">Editor</option>
    <option value="None">None</option>
  </select>
  <br />
  <select name="reportsTo">
    <option>Reports To</option>
    {{#each managers}}
      <option value="{{fullName}}">{{fullName}}</option>
    {{/each}}
  </select>
  <br />
  <button type="submit">Confirm Changes</button>
</form>
<br />
<form method="POST" action="/employee/{{employee._id}}/delete">
  <button type="submit">Delete Employee</button>
</form>