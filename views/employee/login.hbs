<div class="main-login">
  <h2 class="main-title">Login</h2>
  <form method="POST" action="/employee/login" class="login-form">
    <input
      type="text"
      name="username"
      placeholder="username"
      class="login-box"
    />
    <br />
    <input
      type="password"
      name="password"
      placeholder="password"
      class="login-box"
    />
    <br />
    <button type="submit" class="reg-button">Enter</button>
  </form>
</div>