<h2>Create Employee</h2>
<form method="POST" action="/employee/create-employee">
  <input type="text" name="username" placeholder="Username" />
  <br />
  <input type="password" name="password" placeholder="Password" />
  <br />
  <input type="text" name="fullName" placeholder="Full Name" />
  <br />
  <input type="text" name="employeeID" placeholder="Employee ID" />
  <br />
  <label>Hire Date</label>
  <br />
  <input type="date" name="hireDate" placeholder="Hire Date" />
  <br />
  <select name="role">
    <option>Role</option>
    <option value="MGR">Manager</option>
    <option value="FOH">Front-of-house</option>
    <option value="BOH">Back-of-hosue</option>
  </select>
  <br />
  <select name="status">
    <option>Status</option>
    <option value="FT">Full-time</option>
    <option value="PT">Part-time</option>
  </select>
  <br />
  <select name="privilege">
    <option>Privilege</option>
    <option value="Admin">Admin</option>
    <option value="Editor">Editor</option>
    <option value="None">None</option>
  </select>
  <br />
  <select name="reportsTo">
    <option>Reports To</option>
    {{#each managers}}
      <option value="{{fullName}}">{{fullName}}</option>
    {{/each}}
  </select>
  <br />
  <button type="submit">Create Employee</button>
</form>