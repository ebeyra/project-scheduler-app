<div class="form-pages">
  <div class="form-titles">
    <h2>Create Admin</h2>
  </div>
  <div class="form-standard-admin">
    <form method="POST" action="/admin/create-admin">
      <label>Hire Date</label>
      <br />
      <input
        type="date"
        name="hireDate"
        placeholder="Hire Date"
        class="login-box"
      />
      <br />
      <input
        type="text"
        name="username"
        placeholder="Username"
        class="login-box"
      />
      <br />
      <input
        type="password"
        name="password"
        placeholder="Password"
        class="login-box"
      />
      <br />
      <input
        type="text"
        name="fullName"
        placeholder="Full Name"
        class="login-box"
      />
      <br />
      <input
        type="text"
        name="employeeID"
        placeholder="Employee ID"
        class="login-box"
      />
      <br />
      <select name="privilege" class="login-box">
        <option>Privilege</option>
        <option value="Admin">Admin</option>
        <option value="Editor">Editor</option>
        <option value="None">None</option>
      </select>
      <br />
      <button type="submit" class="reg-button">Create Admin</button>
    </form>
  </div>
</div>